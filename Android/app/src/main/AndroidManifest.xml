<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Android"

        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".views.Components"
            android:exported="false"
            android:label="@string/title_activity_components"
            android:theme="@style/Theme.Android" />
        <activity
            android:name=".views.FavouriteScreen"
            android:exported="false"
            android:label="@string/title_activity_favourite_screen"
            android:theme="@style/Theme.Android" />
        <activity
            android:name=".views.CarDetailScreen"
            android:exported="false"
            android:label="@string/title_activity_car_detail_screen"
            android:theme="@style/Theme.Android" />
        <activity
            android:name=".views.InventoryItem"
            android:exported="false"
            android:label="@string/title_activity_inventory_item"
            android:theme="@style/Theme.Android" />
        <activity
            android:name=".views.InventoryScreen"
            android:exported="false"
            android:label="@string/title_activity_inventory_screen"
            android:theme="@style/Theme.Android" />
        <activity
            android:name=".views.HomeScreen"
            android:exported="false"
            android:label="@string/title_activity_home_screen"
            android:theme="@style/Theme.Android" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Android">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>